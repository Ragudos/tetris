---
import Main from "../layouts/Main.astro"
---

<Main>
    <div class="meta">
        <div>
            Level&nbsp;
            <div id="level">1</div>
        </div>
        <div>
            Score&nbsp;
            <div id="score">
                0
            </div>
        </div>
    </div>
    <div id="tetris-container" style="width: 100%; height: 800px;">
    </div>
</Main>
<style>
    .meta {
        position: fixed;
        top: 1rem;
        left: 1rem;
        box-shadow: 0px 8px 32px hsl(var(--text) / 0.075);
        padding: 1rem;
        border-radius: 0.5rem;
        border: 1px solid hsl(var(--text));
        width: 10rem;
        display: grid;
    }

    .meta > div {
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
    }
</style>
<style is:global>
    canvas {
        max-width: 100%;
        max-height: 100%;
        width: 100%;
        height: 100%;
    }
</style>
<script src="../lib/tetris/index"></script>