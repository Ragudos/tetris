---
import Main from "../layouts/Main.astro"
---

<Main>
    <div class="meta">
        <div>
            <span>Highest Level&nbsp;</span>
            <div id="highest-level">1</div>
        </div>
        <div>
            <span>High Score&nbsp;</span>
            <div id="highest-score">
                0
            </div>
        </div>
        <div>
            <span>Level&nbsp;</span>
            <div id="level">1</div>
        </div>
        <div>
            <span>Score&nbsp;</span>
            <div id="score">
                0
            </div>
        </div>
    </div>
    <div id="game-over" hidden>
        <div style="display: flex; flex-direction: column; align-items: center;">
            <h1>Game Over</h1>
            <button id="restart">Restart</button>
        </div>
    </div>
    <div id="tetris-container" style="width: 100%; height: 800px;">
    </div>
</Main>
<style>
    #restart {
        padding: 1rem;
        border-radius: 0.5rem;
        background: hotpink;
        font-weight: 700;
        color: hsl(var(--background));
        font-size: 1rem;
        cursor: pointer;
        opacity: 1;
    }

    #game-over {
        position: fixed;
        z-index: 99;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: hsl(var(--text) / 0.25);
        color: hsl(var(--background));
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .meta {
        position: fixed;
        top: 1rem;
        left: 1rem;
        box-shadow: 0px 8px 32px hsl(var(--text) / 0.075);
        padding: 1rem;
        border-radius: 0.5rem;
        border: 1px solid hsl(var(--text));
        display: flex;
        gap: 1rem;
    }

    .meta > div {
        display: flex;
        gap: 0.5rem;
    }

    .meta > div > span {
        font-weight: 700;
    }
</style>
<style is:global>
    [hidden] {
        display: none !important;
    }
    canvas {
        max-width: 100%;
        max-height: 100%;
        width: 100%;
        height: 100%;
    }
</style>
<script src="../lib/tetris/index"></script>