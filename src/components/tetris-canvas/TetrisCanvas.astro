---
export interface Props {
	/**
	 * Whether this is a player's canvas. If so, we listen for their key press events
	 */
	is_player_canvas: boolean;
	scale: number;
	id: string;
}

const props = Astro.props;
const id = props.id;

// TODO: make the id equal to the loginned user's ID.
---

<div class="canvas-container">
	<div class="canvas-inner-container">
		{props.is_player_canvas &&
			<canvas
				data-type="swap"
				data-id={id}
				id={id + "-swap"}
				width="100"
				height="100"
			>
			</canvas>
		}
		<canvas
			id={id}
			data-id={id}
			data-type="main"
			data-isplayer={props.is_player_canvas}
			data-scale={props.scale}
			width="200"
			height="400"
		>
		</canvas>
		{props.is_player_canvas &&
			<canvas
				data-id={id}
				data-type="next"
				id={id + "-next-tetromino"}
				width="100"
				height="100"
			>
			</canvas>
		}
		</canvas>
	</div>
</div>

<style>
canvas {
	border: 1px solid hsl(var(--text));
	touch-action: none;
}

[data-type=main] {
	width: 100%;
	height: 100%;
	position: relative;
}

[data-type=next],
[data-type=swap] {
	align-self: flex-start;
}

.canvas-inner-container {
	display: flex;
	gap: 2rem;
}
.canvas-container {
	display: grid;
	place-items: center;
}
</style>

